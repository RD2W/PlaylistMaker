<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimeLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_bt_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ic_padding</item>
        <item name="iconTint">@color/dark_gray</item>
    </style>

    <style name="ItemSettingsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="IconClearStyle">
        <item name="android:background">@color/background_search_field</item>
        <item name="tint">@color/text_search_field</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:background">@drawable/ic_search_field</item>
        <item name="android:backgroundTint">@color/background_search_field</item>
        <item name="android:paddingStart">@dimen/value_8</item>
        <item name="android:drawableStart">@drawable/ic_search_button</item>
        <item name="android:drawableTint">@color/icon_search_field</item>
        <item name="android:drawablePadding">@dimen/ic_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_search_field</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FoundTrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FoundTrackDetails">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_track_details</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FoundTrackCover">
        <item name="android:background">@color/background_track_placeholder</item>
    </style>

    <style name="FoundTrackCover.CornerSize">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_2</item>
    </style>

    <style name="SearchPlaceholderTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="SearchHistoryTextStyle" parent="SearchPlaceholderTextStyle">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SearchUpdateButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/search_update_button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/corner_radius_52</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/CustomToolbarTitleText</item>
    </style>

    <style name="CustomToolbarTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackNameText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_player_main</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerArtistNameText" parent="PlayerTrackNameText">
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>

    <style name="PlayerListenedTrackTimeText" parent="PlayerTrackNameText">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackDetailsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_small_plus_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTrackDetailsInfoText" parent="PlayerTrackDetailsText">
        <item name="android:textColor">@color/text_player_main</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="PlayerTrackCover.CornerSize" parent="FoundTrackCover.CornerSize">
        <item name="cornerSize">@dimen/corner_radius_8</item>
    </style>

</resources>