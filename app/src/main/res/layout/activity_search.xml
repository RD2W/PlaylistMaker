<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutStyle"
    android:id="@+id/search"
    tools:context=".SearchActivity">

    <com.google.android.material.appbar.MaterialToolbar
       android:id="@+id/topAppBar"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       app:title="@string/search_button"
       app:navigationIcon="@drawable/ic_back"
       app:titleTextColor="@color/text"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <EditText style="@style/EditTextStyle"
            android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/offset_16"
            android:layout_marginVertical="@dimen/offset_8"
            android:autofillHints="no"
            android:background="@drawable/ic_search_field"
            android:contextClickable="true"
            android:drawableStart="@drawable/ic_search_button"
            android:drawableTint="@color/icon_search_field"
            android:drawablePadding="@dimen/ic_padding"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="@dimen/offset_8"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/light_blue"
            tools:ignore="RtlSymmetry"/>

        <ImageView style="@style/IconClearStyle"
            android:id="@+id/clearIcon"
            android:layout_width="@dimen/offset_16"
            android:layout_height="@dimen/offset_16"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/offset_18"
            android:layout_marginEnd="@dimen/offset_24"
            android:contentDescription="@string/ic_clear_description"
            android:src="@drawable/ic_clear"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>