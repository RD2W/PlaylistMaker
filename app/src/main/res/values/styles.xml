<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="PrimeLinearLayoutStyle" parent="PrimeLayoutStyle">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ItemSettingsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="IconClearStyle">
        <item name="android:background">@color/background_search_field</item>
        <item name="tint">@color/text_search_field</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:background">@drawable/ic_search_field</item>
        <item name="android:backgroundTint">@color/background_search_field</item>
        <item name="android:paddingStart">@dimen/value_8</item>
        <item name="android:drawableStart">@drawable/ic_tab_search</item>
        <item name="android:drawableTint">@color/icon_search_field</item>
        <item name="android:drawablePadding">@dimen/ic_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_search_field</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FoundTrackName" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FoundTrackDetails" parent="FoundTrackName">
        <item name="android:textColor">@color/text_track_details</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="FoundTrackCover">
        <item name="android:background">@color/background_track_placeholder</item>
        <item name="shapeAppearance">@style/FoundTrackCover.CornerSize</item>
    </style>

    <style name="FoundTrackCover.CornerSize">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_2</item>
    </style>

    <style name="PlaylistCoverStyle">
        <item name="android:background">@color/background_track_placeholder</item>
        <item name="shapeAppearance">@style/PlaylistCoverStyle.CornerSize</item>
    </style>

    <style name="PlaylistDetailsCoverStyle">
        <item name="shapeAppearance">@style/PlaylistCoverStyle.CornerSize</item>
    </style>

    <style name="PlaylistCoverStyle.CornerSize">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_8</item>
    </style>

    <style name="PlaylistTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistTitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlaylistNameTitleTextStyle" parent="PlaylistTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_title_plus_size</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="PlaylistMoreMenuTextStyle" parent="PlaylistTitleTextStyle">
        <item name="android:layout_marginTop">@dimen/value_8</item>
        <item name="android:paddingTop">@dimen/value_12</item>
        <item name="android:paddingBottom">@dimen/value_12</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_middle_plus_size</item>
    </style>

    <style name="SearchPlaceholderTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>

    <style name="SearchHistoryTextStyle" parent="SearchPlaceholderTextStyle">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TabPlaceholderTextStyle" parent="SearchPlaceholderTextStyle">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomSheetPlaceholderTextStyle" parent="SearchPlaceholderTextStyle">
        <item name="android:textSize">@dimen/text_small_plus_size</item>
    </style>

    <style name="SearchUpdateButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/search_update_button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/corner_radius_52</item>
    </style>

    <style name="CreatePlaylistButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_middle_plus_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingTop">@dimen/value_12</item>
        <item name="android:paddingBottom">@dimen/value_12</item>
        <item name="cornerRadius">@dimen/corner_radius_8</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="navigationIconTint">@color/button</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitleText</item>
    </style>

    <style name="PlaylistToolbarStyle" parent="CustomToolbarStyle">
        <item name="android:background">@color/light_gray</item>
        <item name="navigationIconTint">@color/dark_gray</item>
    </style>

    <style name="CustomToolbarTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/text_tab_layout</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackNameText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_player_main</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerArtistNameText" parent="PlayerTrackNameText">
        <item name="android:textSize">@dimen/text_middle_size</item>
    </style>

    <style name="PlayerListenedTrackTimeText" parent="PlayerTrackNameText">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerTrackDetailsText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_small_plus_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTrackDetailsInfoText" parent="PlayerTrackDetailsText">
        <item name="android:textColor">@color/text_player_main</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="PlayerTrackCover.CornerSize" parent="FoundTrackCover.CornerSize">
        <item name="cornerSize">@dimen/corner_radius_8</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:gravity">center</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabTextColor">@color/text_tab_layout</item>
        <item name="tabSelectedTextColor">@color/text_tab_layout</item>
        <item name="tabIndicatorColor">@color/text_tab_layout</item>
        <item name="tabRippleColor">@color/light_blue</item>
        <item name="tabBackground">@color/background</item>
        <item name="tabIndicator">@drawable/ic_tab_indicator</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMinWidth">240dp</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_middle_plus_size</item>
        <item name="android:textColor">@color/text_tab_layout</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="itemTextColor">@drawable/bottom_nav_text_color_selector</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_color_selector</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/value_2</item>
        <item name="boxStrokeWidthFocused">@dimen/value_2</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_8</item>
        <item name="boxStrokeColor">@color/input_box_stroke_color</item>
        <item name="hintTextColor">@color/light_blue</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
        <item name="android:textColorHint">@color/text_input</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textFontWeight">400</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CustomTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item> <!-- Центрирование -->
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="backgroundTint">@color/background_snackbar</item>
        <item name="shapeAppearanceOverlay">@style/SnackbarRoundedCorners</item>
    </style>

    <style name="SnackbarRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_2</item>
    </style>

    <!-- Стиль для MaterialAlertDialog -->
    <style name="ThemeOverlay.PlaylistMaker.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogMessageStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <!-- Стиль заголовка AlertDialog -->
    <style name="DialogTitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textAppearance">@style/TextAppearance.PlaylistMaker.DialogTitle</item>
    </style>

    <!-- Текстовая аппиранс для заголовка AlertDialog -->
    <style name="TextAppearance.PlaylistMaker.DialogTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.25</item> <!-- Межстрочный интервал -->
        <item name="android:letterSpacing">0.015</item> <!-- Межбуквенный интервал -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль текста сообщения AlertDialog -->
    <style name="DialogMessageStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textAppearance">@style/TextAppearance.PlaylistMaker.DialogMessage</item>
    </style>

    <!-- Текстовая аппиранс для сообщения AlertDialog -->
    <style name="TextAppearance.PlaylistMaker.DialogMessage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:lineSpacingMultiplier">1.25</item> <!-- Межстрочный интервал -->
        <item name="android:letterSpacing">0.025</item> <!-- Межбуквенный интервал -->
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль текста кнопок AlertDialog -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.PlaylistMaker.DialogButton</item>
        <item name="android:insetTop">0dp</item> <!-- Убираем стандартные отступы -->
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Стиль для текста кнопок диалога -->
    <style name="TextAppearance.PlaylistMaker.DialogButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/text_middle_plus_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.02</item> <!-- Опционально -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">250</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.PlaylistMaker</item>
    </style>

</resources>