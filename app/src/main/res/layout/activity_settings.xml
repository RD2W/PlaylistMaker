<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayoutStyle"
    android:id="@+id/settings"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/settings_button"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@color/text"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        style="@style/ItemSettingsStyle"
        android:id="@+id/themeSwitcher"
        android:gravity="center_vertical"
        android:text="@string/settings_dark_theme_item"
        android:thumbTintMode="screen"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/ItemSettingsStyle"
        android:drawableEnd="@drawable/ic_share"
        android:text="@string/settings_share_app_item"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/ItemSettingsStyle"
        android:drawableEnd="@drawable/ic_support"
        android:text="@string/settings_support_item"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/ItemSettingsStyle"
        android:drawableEnd="@drawable/ic_forward"
        android:text="@string/settings_user_agreement_item"/>

</LinearLayout>